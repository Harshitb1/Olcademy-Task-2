<% include ./partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">New Query</div>
    <form class="ui form" action="/query" method="POST">
        <div class="field">
            <label>Name</label>
        <input type="text" name="query[name]" placeholder="name" required>
        </div>
        <div class="field">
            <label>Email</label>
            <input type="email" name="query[email]" placeholder="email"required>
        </div>
        <div class="field">
            <label>Subject</label>
            <input type="text" name="query[subject]" placeholder="subject" required>
        </div> 
        <div class="field">
            <label>Message</label>
            <input type="text" name="query[message]" placeholder="message" required>
        </div> 
        <div class="field">
            <label>Query </label>
            <textarea name="query[query]"></textarea>
        </div>
        
        <input class="ui green big basic button" type="submit">
    </form>
</div>

