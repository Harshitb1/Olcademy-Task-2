<% include ./partials/header %>
<div class="ui main text container">
         <div class="ui huge header" id="index">All Queries</div>
         <div class="ui top attached segment">
             <div class="ui divided items">
                    <% queries.forEach(function(query){ %>
                        <div class="item" >

                            <div class="content">
                                <a class="header" >Name : <%= query.name %></a>
                                <div class="meta">
                                        <span><%= query.created.toDateString()%></span>
                                </div>
                                <div> 
                                    <p> Subject : <%= query.subject %></p>
                             </div>
                                <div> 
                                        <p> Email : <%= query.email %></p>
                                 </div>
                                 <div class="extra">
                                    <a class="ui floated basic violet button"href="/query/<%=query._id %>">
                                       <i class="right chevron icon"></i>
                                       Read More
                                   </a>
                                    
                               </div>
                                
                            </div>
                           
                        </div>
                    
                    <% }) %>
             </div>
             <a class="ui orange basic button" href="/query/contact">Contact Us</a>
         </div>
</div>


<% include ./partials/footer %>
